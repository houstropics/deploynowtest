        <a href="/" class="p-0 font-univermag">ASV MALS</a>
        <nav class="hidden md:block"> <!-- Hide the nav on small screens -->
            <ul class="flex space-x-4 p-0">
                <li class="relative">
                    <a href="#" class="hover:text-gray-300 p-0">Sektionen</a>
                    <ul class="absolute z-10 hidden bg-white border border-gray-200 py-2 mt-1 rounded-md">
                        <li>
                            <a href="/fussball" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Fussball</a>
                        </li>
                        <li>
                            <a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Badminton</a>
