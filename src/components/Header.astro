            </ul>
        </nav>
        <!-- Burger button for mobile -->
        <button class="block md:hidden" id="burger">
            <svg class="w-6 h-6" viewBox="0 0 24 24">
                <path fill="currentColor" d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
