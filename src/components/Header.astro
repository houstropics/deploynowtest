<!-- Dropdown menu for mobile -->
<ul class="md:hidden z-10 hidden bg-white border border-gray-200 rounded-md right-0" id="mobileMenu">
	<li>
		<a href="#" class="block px-4 py-2 text-gray-800 hover:bg-gray-100" id="mobiledropdown">Sektionen</a>
		<ul class="hidden bg-white border border-gray-200 py-2 mt-1 rounded-md" id="dropdown">
			<li>
				<a href="/fussball" class="block px-8 py-2 text-gray-800 hover:bg-gray-100">Fussball</a>
			</li>
			<li>
				<a href="#" class="block px-8 py-2 text-gray-800 hover:bg-gray-100">Badminton</a>
			</li>
			<li><a href="#" class="block px-8 py-2 text-gray-800 hover:bg-gray-100">Tennis</a></li>
	   </ul>
	</li>
	<li><a href="/geschichte" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Geschichte</a></li>
    <li><a href="/kontakt" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Kontakt</a></li>
</ul>


<script>
const dropdownTrigger = document.querySelector('.relative');
const dropdownMenu = dropdownTrigger.querySelector('ul');
const burgerButton = document.getElementById('burger');
const mobileMenu = document.getElementById('mobileMenu');
const mobiledropdown = document.getElementById('mobiledropdown');
const dropdown = document.getElementById('dropdown');

// Function to toggle menu visibility
function toggleMenu() {
    dropdownMenu.classList.toggle('hidden');
    mobileMenu.classList.toggle('hidden');
}

dropdownTrigger.addEventListener('mouseenter', () => {
    dropdownMenu.classList.remove('hidden');
});

dropdownTrigger.addEventListener('mouseleave', () => {
    dropdownMenu.classList.add('hidden');
});

// Add event listener to burger button
burgerButton.addEventListener('click', () => {
    toggleMenu();
});

// Add event listener to mobile dropdown
mobiledropdown.addEventListener('click', () => {
    dropdown.classList.toggle('hidden');
});
</script>
