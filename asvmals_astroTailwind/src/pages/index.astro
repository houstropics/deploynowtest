                    <td id="count1" class="pr-8">850+</td>
                    <td class="font-oskari-g2 text-xl md:text-2xl uppercase">Mitglieder</td>
                </tr>
                <tr>
                    <td id="count1" >10</td>
                    <td class="font-oskari-g2 text-xl md:text-2xl uppercase">Sektionen</td>
                </tr>
                <tr>
                    <td id="count3">1965</td>
                    <td class="font-oskari-g2 text-xl md:text-2xl uppercase">gegründet</td>
                </tr>
            </table>
                        
        </div>
    </div>
    
    <div class="w-full lg:w-1/2 h-100 flex items-center justify-center">
        <img src={sportplatzPic.src} alt="Sportplatz">
    </div>
</div>

<div class="flex font-univermag flex-col lg:flex-row">
    <div class="order-1 lg:order-2 w-full lg:w-1/2 h-100 bg-primary flex flex-col text-white relative">
