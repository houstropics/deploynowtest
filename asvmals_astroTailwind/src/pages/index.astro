        <li>
            <a href="#" class="flex items-center hover:text-secondary">
                <img src={schwimmenPic.src} alt="Schwimmen" class="inline-block mr-7 lg:mr-14">
                Schwimmen
            </a>
        </li>
    </ul>
                        
        </div>
    </div>
    
    <div class="w-full lg:w-1/2 h-100 flex items-center justify-center">
        <img src={kartePic.src} alt="Mals-Karte" style="max-width: 100%; height: auto;">
    </div>
</div>


<!-- <LogoSlider></LogoSlider> -->

