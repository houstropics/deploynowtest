        <div class="relative ml-7 text-white">
            <div class="text-5xl md:text-6xl font-univermag">Infos</div>
        </div>
    
        <div class="flex-grow"></div> 
    
        <div class="relative ml-7 mb-7 mt-16 lg:mt-0" >
            <table class="text-xl lg:text-2xl">
                <tr>
                    <td class="font-oskari-g2 uppercase hover:text-secondary"><a href="/geschichte">Geschichte</a></td>
                </tr>
                <tr>
                    <td class="font-oskari-g2 uppercase hover:text-secondary"><a href="/vorstand" >Vorstand</a></td>
                </tr>
                <tr>
                    <td class="font-oskari-g2 uppercase hover:text-secondary"><a href="/downloads" >Downloads</a></td>
                </tr>
            </table>
                        
        </div>
    </div>
    
    <div class="order-2 lg:order-1 w-full lg:w-1/2 h-100 flex items-center justify-center">
        <img src={tennisPic.src} alt="Tennisplatz">
    </div>
</div>


<div class="flex font-univermag flex-col lg:flex-row">
    <div class="w-full lg:w-1/2 h-100 bg-primary flex flex-col text-white relative">
        <div class="w-full h-px bg-secondary mt-8"></div>
        <div class="relative ml-7 text-white">
            <div class="text-5xl md:text-6xl font-univermag">Sektionen</div>
        </div>
    
        <div class="flex-grow"></div> 
    
        <div class="relative ml-7 mb-7" >
