import sportplatzPic from '../images/index/sportplatz.png';
import tennisPic from '../images/index/tennis.png';
import kartePic from '../images/index/karte.png';
import badmintonPic from '../images/index/badminton.svg';
import tennisPic2 from '../images/index/tennis.svg';
import volleyPic from '../images/index/volleyball.svg';
import triathlonPic from '../images/index/triathlon.svg';
import schwimmenPic from '../images/index/schwimmen.svg';
import leichtathletikPic from '../images/index/leichtathletik.svg';
import bogenschützenPic from '../images/index/bogenschützen.svg';
