<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>ASV Mals</title>
    <link rel="preload" href="/fonts/univermag.ttf" as="font" type="font/ttf" crossorigin>


    <style is:global>
        @import '../styles/global.css'; 
      </style>

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
   
    <Header></Header>

    <Slider></Slider>



<div class="flex font-univermag flex-col lg:flex-row">
    <div class="w-full lg:w-1/2 h-100 bg-primary flex flex-col text-white relative">
        <div class="w-full h-px bg-secondary mt-8"></div>
        <div class="relative ml-7 text-white">
            <div class="text-5xl md:text-6xl font-univermag">Der Verein</div>
        </div>
    
        <div class="flex-grow"></div> 
    
        <div class="relative ml-7 mb-7 mt-16 lg:mt-0" >
            <table class="text-4xl md:text-5xl">
